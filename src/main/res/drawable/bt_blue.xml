<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- shadow (밑으로) : 그림자 -->
            <item >
                <shape>
                    <corners android:radius="3dp" />

                </shape>
            </item>
            <!-- background (위로) -->
            <item >
                <shape>
                    <corners android:radius="3dp" />
                    <solid android:color="@color/blue" />
                    <stroke android:width="0dp" android:color="#6a6a6a" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>