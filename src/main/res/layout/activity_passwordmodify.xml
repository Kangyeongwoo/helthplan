<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Passwordmodify">

    <Button
        android:id="@+id/passwordmodifycancelbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/trans"
        android:text="취소"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/passwordmodifyfinishbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@color/trans"
        android:text="완료"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="411dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/weakgray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordmodifytext">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView51"
                android:layout_width="85dp"
                android:layout_height="65dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="비밀번호"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="149dp" />

            <EditText
                android:id="@+id/modifypasswordedittext"
                android:layout_width="0dp"
                android:layout_height="65dp"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="157dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/textView52"
                android:layout_width="110dp"
                android:layout_height="65dp"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:text="비밀번호 확인"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="232dp" />

            <EditText
                android:id="@+id/modifypasswordcheckedittext"
                android:layout_width="303dp"
                android:layout_height="65dp"
                android:ems="10"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="157dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/passwordmodifytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="비밀번호 변경"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>